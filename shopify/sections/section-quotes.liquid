<div class="container my-16 md:my-32">
  <div class="flex justify-center">
    {% render 'icon-ratings-5' %}
  </div>
  {% if section.settings.headline %}
    <div class="text-2xl md:text-section-title-md font-abril-display leading-normal font-bold text-center mt-3 mb-7 md:mb-5">
      {{ section.settings.headline }}
    </div>
  {% endif %}

  <div class="overflow-hidden relative px-6 md:px-0" data-slider="testimonial">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide lozad">
          {%
            render 'section-quote',
            text: block.settings.quote-text
            author: block.settings.quote-author
          %}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next testimonial-swiper-btn"></div>
    <div class="swiper-button-prev testimonial-swiper-btn"></div>
  </div>
</div>

{% if section.settings.image1 != blank %}
  <div class="hidden md:block h absolute left-0 top-1/2 -translate-y-1/2">
    {%
      render 'section-image',
      class: 'h-blob-image-1'
      image: section.settings.image1,
      alt_text: "Side Image"
    %}
  </div>
{% endif %}

{% if section.settings.image2 != blank %}
  <div class="hidden md:block h absolute right-0 top-1/2 -translate-y-1/2">
    {%
      render 'section-image',
      class: 'h-blob-image-2 translate-y-20'
      image: section.settings.image2,
      alt_text: "Side Image"
    %}
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.quotes.name",
  "class": "relative",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "What others say about us"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image on Left"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image on Right"
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "t:sections.quotes.settings.quote",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "quote-text",
          "label": "t:common.text",
          "default": "Add customer reviews and testimonials to showcase your storeâ€™s happy customers."
        },
        {
          "type": "text",
          "id": "quote-author",
          "label": "t:common.author",
          "default": "Author's name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.quotes.name",
      "category": "Text",
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}
