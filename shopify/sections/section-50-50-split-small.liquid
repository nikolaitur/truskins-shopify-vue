<div class="my-24 relative">
  <div class="container px-20 flex items-center flex-col md:flex-row">
    <div class="md:pr-16 md:basis-1/2">
      {%
        render 'section-image',
        class: ''
        image: section.settings.image,
        alt_text: "Ingredients"
      %}
    </div>
    <div class="max-w-lg text-center md:text-left mt-10 md:mt-0 md:pr-10 md:basis-1/2">
      <div class="text-section-title-md font-abril-display font-bold  leading-tight">
        {{ section.settings.title }}
      </div>
      <div class="mt-10 md:mt-5 text-base font-light leading-6 md:leading-normal tracking-normal">
        {{ section.settings.subtitle }}
      </div>
      {% if section.settings.btn_text != blank %}
        <a
          href="{{ section.settings.btn_link }}"
          class="button button-secondary mx-auto md:ml-0 mt-10 md:mt-7"
        >
          {{- section.settings.btn_text -}}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_fixed_img == true and section.settings.fixed_image1 != blank %}
    <div class="hidden md:block h absolute left-0 top-0 -translate-y-1/3">
      {%
        render 'section-image',
        class: 'h-blob-image-1'
        image: section.settings.fixed_image1,
        alt_text: "Side Image"
      %}
    </div>
  {% endif %}
  {% if section.settings.show_fixed_img == true and section.settings.fixed_image2 != blank %}
    <div class="hidden md:block h absolute right-0 bottom-0 translate-y-1/3">
      {%
        render 'section-image',
        class: 'h-blob-image-2'
        image: section.settings.fixed_image2,
        alt_text: "Side Image"
      %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image with Text Small",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "checkbox",
      "id": "show_fixed_img",
      "label": "Show Fixed Image",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "fixed_image1",
      "label": "Fixed Image"
    },
    {
      "type": "image_picker",
      "id": "fixed_image2",
      "label": "Fixed Image"
    }
  ],
  "presets": [
    {
      "name": "Image with Text Smal",
      "category": "Custom"
    }
  ]
}
{% endschema %}
