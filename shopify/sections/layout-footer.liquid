<div class="pt-16 md:pt-20 pb-10 bg-cod-gray">
  <div class="container flex items-start flex-wrap md:flex-nowrap w-full justify-between md:pr-20">
    <div class="w-[300px] mx-auto pb-11 border-b border-b-white md:border-none md:mx-0 md:w-96">
      <div>
        <div class="text-[30px] md:text-hero-subtitle-md font-abril-display text-white font-bold text-center md:text-left mb-10 md:mb-5">
          {{ section.settings.headline }}
        </div>
        {% form 'customer', class: 'w-full rounded-full overflow-hidden' %}
          {% if form.errors %}
            {% capture error_text %}
              {{ form.errors | default_errors }}
            {% endcapture %}

            {%
              render 'layout-message',
              type: 'error'
              text: error_text
              class: 'mb-8'
            %}
          {% endif %}

          {% if form.posted_successfully? %}
            Success
          {% endif %}

          <div class="relative">
            <input type="hidden" name="contact[tags]" value="newsletter">

            <div class="flex flex-col sm:flex-row">
              <input
                type="email"
                placeholder="Enter Email Address"
                name="contact[email]"
                value="{% if customer.email != blank %}{{ customer.email }}{% endif %}"
                class="newsletter-email-input h-[42px] flex-1 border px-6 py-3 md:py-1 text-scorpion text-sm leading-none outline-none"
                required
              >

              <button class="absolute right-0 top-0 bottom-0 flex items-center px-5 font-bold text-sm leading-none text-cod-gray uppercase">
                submit
              </button>
            </div>
          </div>
        {% endform %}
      </div>
      {%
        if section.settings.social_instagram_visible or
        section.settings.social_tiktok_visible or
        section.settings.social_facebook_visible or
        section.settings.social_youtube_visible
      %}
        <div class="mt-10 md:mt-11">
          {%
            render 'layout-social',
            social_instagram_visible: section.settings.social_instagram_visible
            social_instagram_link: section.settings.social_instagram_link
            social_tiktok_visible: section.settings.social_tiktok_visible
            social_tiktok_link: section.settings.social_tiktok_link
            social_facebook_visible: section.settings.social_facebook_visible
            social_facebook_link: section.settings.social_facebook_link
            social_youtube_visible: section.settings.social_youtube_visible
            social_youtube_link: section.settings.social_youtube_link
          %}
        </div>
      {% endif %}
    </div>
    {%- for link in linklists[section.settings.footer_menu].links -%}
      <div class="main-footer__menu basis-full md:basis-auto mt-5 md:mt-0 max-w-[300px] md:max-w-none mx-auto md:mx-0  md:pl-0">
        <h4 class="text-xl font-abril-display text-white font-bold pb-5 relative pl-9 md:pl-0 cursor-pointer">
          {{ link.title }}
          <span class="sm:hidden absolute left-0 top-[6px]">
            {%- render 'icon-cross' -%}
          </span>
          <!-- icon-open and close -->
        </h4>
        {% if link.links != blank %}
          <div class="main-footer__menu--sub flex flex-col gap-3 pl-9 md:pl-0 max-h-0 md:max-h-max overflow-hidden transition-all duration-150">
            {%- for childlink in link.links -%}
              <a
                href="{{ childlink.url }}"
                class="w-fit text-sm text-white"
              >
                {{ childlink.title }}
              </a>
            {%- endfor -%}
          </div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
  <div class="pt-10 md:pt-20 mt-5 md:mt-0 border-t border-t-white md:border-none max-w-[300px] md:max-w-none mx-auto md:mx-0">
    <div class="container text-white text-xs text-center md:text-left">
      &copy; {{ 'now' | date: "%Y" }}
      {{ shop.name }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "Our newsletter"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Menu List",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header.content",
      "info": "t:sections.footer.settings.header.info"
    },
    {
      "type": "header",
      "content": "Instagram"
    },
    {
      "type": "checkbox",
      "id": "social_instagram_visible",
      "label": "t:sections.footer.settings.show-icon"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "t:common.link"
    },
    {
      "type": "header",
      "content": "tiktok"
    },
    {
      "type": "checkbox",
      "id": "social_tiktok_visible",
      "label": "t:sections.footer.settings.show-icon"
    },
    {
      "type": "url",
      "id": "social_tiktok_link",
      "label": "t:common.link"
    },
    {
      "type": "header",
      "content": "Facebook"
    },
    {
      "type": "checkbox",
      "id": "social_facebook_visible",
      "label": "t:sections.footer.settings.show-icon"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "t:common.link"
    },
    {
      "type": "header",
      "content": "Youtube"
    },
    {
      "type": "checkbox",
      "id": "social_youtube_visible",
      "label": "t:sections.footer.settings.show-icon"
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "t:common.link"
    }
  ]
}
{% endschema %}
