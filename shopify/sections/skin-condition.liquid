{% if section.settings.title != blank %}
  <div class="md:hidden font-abril-display text-section-title-md leading-section-title font-bold text-center mb-10">
    {{ section.settings.title }}
  </div>
{% endif %}
<div class="grid my-5 container px-10 md:px-4 grid-cols-2 lg:grid-cols-4 gap-3 md:gap-5">
  {% for block in section.blocks %}
    <div class="text-center py-5 md:text-left">
      <a class="" href="{{ block.settings.link }}">
        {%
          render 'section-image',
          class: 'h48 md:h-96 rounded-2xl overflow-hidden'
          image: block.settings.image,
          alt_text: block.settings.title
        %}
      </a>

      <div class="mt-5 text-lg md:text-xl leading-6 font-abril-display  font-bold">
        {{ block.settings.title }}
      </div>
      <a
        class="block mx-auto md:ml-0 w-fit pt-4 md:pt-3 pb-1 hover:pb-[2px] md:pb-underline text-xs md:text-sm leading-none font-bold border-b-2 border-b-ecstasy"
        href="{{ block.settings.link }}"
      >
        {{- block.settings.link_text -}}
      </a>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Skin Condition",
  "max_blocks": 4,
  "class": "relative z-1",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "image_with_link",
      "name": "Image With Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Your Title Here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Skin Condition",
      "category": "Custom",
      "blocks": [
        {
          "type": "image_with_link"
        },
        {
          "type": "image_with_link"
        },
        {
          "type": "image_with_link"
        },
        {
          "type": "image_with_link"
        }
      ]
    }
  ]
}
{% endschema %}
